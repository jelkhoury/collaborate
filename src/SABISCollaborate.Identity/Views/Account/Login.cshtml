@model LoginViewModel

<div class="login-page">
    @Html.Partial("_ValidationSummary")
    <div class="row">
        @if (Model.EnableLocalLogin)
        {
            <div class="col-sm-12">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="auth-form">
                            <form asp-route="Login">
                                <p class="app-title">SABIS Collaborate</p>
                                <input type="hidden" asp-for="ReturnUrl" />
                                <fieldset>
                                    <div class="form-group inner-addon left-addon">
                                        <i class="glyphicon glyphicon-user"></i>
                                        <input class="login-text-input" placeholder="Username" asp-for="Username" autofocus>
                                    </div>
                                    <div class="form-group inner-addon left-addon">
                                        <i class="glyphicon glyphicon-lock"></i>
                                        <input type="password" class="login-text-input" placeholder="Password" asp-for="Password" autocomplete="off">
                                    </div>
                                    <div class="form-group">
                                        <button class="btn btn-primary">Login</button>
                                        <img src="data:image/gif;base64," />
                                    </div>
                                </fieldset>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>